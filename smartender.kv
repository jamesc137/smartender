<Main>:
    size_hint: 1, 1
    pos_hint: {'x': 0, 'y': 0}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Drink Menu'
        BoxLayout:
            size_hint: 1, 0.5
            orientation: 'horizontal'
            Button:
                text: 'Mimosa'
                on_release: root.make_drink('mimosa')
            Button:
                text: 'Tequila Sunrise'
                on_release: root.make_drink('tequila_sunrise')
            Button:
                text: 'Screw Driver'
                on_release: root.make_drink('screw_driver')
            Button:
                text: 'Rum & Coke'
                on_release: root.make_drink('rum_and_coke')

    TabbedPanelItem:
        text: 'Setup'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Getting Started:'
            Label:
                text: 'Step One - Setup Each Pump'
            Label:
                text: 'Step Two - `Ready` the Pumps'
            Label:
                text: 'To pre-fill Smartender pumps with liquid \nplace a cup in the Smartender and then select `Ready Pump`. \nAfter each use you may want to empty the pumps. \nTo do this place a cup in the Smartender. \nRemove the hoses on the back from liquid containers then select `Empty Pumps`.'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Ready Pumps'
                    size_hint: (.5, .5)
                Button:
                    text: 'Empty Pumps'
                    size_hint: (.5, .5)

    TabbedPanelItem:
        text: 'Pump 1'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.pump_1_status
                font_size: 80
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        text: 'Vodka'
                        on_press: root.set_pump_one('pump_1', 'vodka')
                        on_release: root.change_text('pump_1', 'vodka')
                    Button:
                        text: 'Gin'
                        on_press: root.set_pump_one('pump_1', 'gin')
                        on_release: root.change_text('pump_1', 'gin')
                    Button:
                        text: 'Rum'
                        on_press: root.set_pump_one('pump_1', 'rum')
                        on_release: root.change_text('pump_1', 'rum')
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        text: 'Tequila'
                        on_press: root.set_pump_one('pump_1', 'tequila')
                        on_release: root.change_text('pump_1', 'tequila')
                    Button:
                        text: 'Whiskey'
                        on_press: root.set_pump_one('pump_1', 'whiskey')
                        on_release: root.change_text('pump_1', 'whiskey')
                    Button:
                        text: 'Brandy'
                        on_press: root.set_pump_one('pump_1', 'brandy')
                        on_release: root.change_text('pump_1', 'brandy')
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        text: 'Tonic'
                        on_press: root.set_pump_one('pump_1', 'tonic')
                        on_release: root.change_text('pump_1', 'tonic')
                    Button:
                        text: 'Sprite'
                        on_press: root.set_pump_one('pump_1', 'sprite')
                        on_release: root.change_text('pump_1', 'sprite')
                    Button:
                        text: 'Coke'
                        on_press: root.set_pump_one('pump_1', 'coke')
                        on_release: root.change_text('pump_1', 'coke')
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        text: 'Orange Juice'
                        on_press: root.set_pump_one('pump_1', 'oj')
                        on_release: root.change_text('pump_1', 'oj')
                    Button:
                        text: 'Lemonade'
                        on_press: root.set_pump_one('pump_1', 'lemonade')
